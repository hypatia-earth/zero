{
  "name": "hypatia-zero",
  "version": "0.1.93",
  "description": "Browser-based weather visualization using WebGPU",
  "license": "MIT",
  "author": "Hypatia Earth",
  "homepage": "https://zero.hypatia.earth",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypatia-earth/zero.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "quality": "./tools/check-quality-with-exemptions.sh",
    "quality:strict": "./tools/check-quality.sh",
    "predeploy": "npm run quality",
    "convert-luts": "node scripts/convert-luts-float16.js",
    "deploy:zero": "cd ../server/scripts && ./build-zero.sh && ./deploy-zero.sh",
    "wiki": "python3 scripts/publish-wiki.py",
    "wiki:push": "python3 scripts/publish-wiki.py --push",
    "repo-docs": "python3 scripts/publish-repo-docs.py",
    "repo-docs:push": "python3 scripts/publish-repo-docs.py --push"
  },
  "dependencies": {
    "@preact/signals-core": "^1.5.0",
    "immer": "^10.0.3",
    "marked": "^17.0.1",
    "mithril": "^2.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/mithril": "^2.2.0",
    "@webgpu/types": "^0.1.0",
    "canvas": "^3.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wgsl-plus": "^1.0.1"
  }
}
